{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "ES2020",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "isolatedModules": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
